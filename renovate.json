{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "minimumReleaseAge": "7 days",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 4am on monday"],
    "automerge": true
  },

  "enabledManagers": [
    "pep621",
    "pre-commit",
    "npm",
    "dockerfile",
    "docker-compose",
    "github-actions"
  ],

  "pre-commit": {
    "enabled": true
  },

  "packageRules": [
    {
      "matchManagers": ["pre-commit"],
      "groupName": "pre-commit dependencies",
      "groupSlug": "pre-commit-deps"
    },
    {
      "matchManagers": ["pep621"],
      "matchDepTypes": ["dev-dependencies", "dev", "test", "lint"],
      "groupName": "backend dev dependencies",
      "groupSlug": "backend-dev-deps"
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "groupName": "frontend dev dependencies",
      "groupSlug": "frontend-dev-deps"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions dependencies",
      "groupSlug": "gha-deps"
    },
    {
      "matchManagers": ["dockerfile", "docker-compose"],
      "groupName": "Docker dependencies",
      "groupSlug": "docker-deps"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchCategories": ["security"],
      "minimumReleaseAge": "0 days"
    }
  ],

  "separateMajorMinor": true,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10
}
